<div class="starter-template">
<h1 style="font-size:1000%" id="kanji"> <%= kanji %> </h1>
<p> On reading :  <%= on_reading %> </p>
<p> On translation : <%= on_translation %> </p>
<p> Kun Reading : <%= kun_reading %> </p>
<p> Kun Translation : <%= kun_translation %> </p>

<a href='/' class="btn btn-default btn-lg" role="button">Get Another One &raquo;</a>
</div>

<div class="col-md-6">
<button id="wiki-toggle">Read More</button>
  <div id="wiki" style="display:none">
    <p>From <a href="https://www.wiktionary.org/">Wiktionary.org</a> :</p>
  </div>
</div>
<div class="col-md-6">
<button id="advance-toggle">Advance Search</button>
</div>

<script>
window.onload = function(){
  wiki.getKanji($("#kanji").text().trim());
}

$("#wiki-toggle").click(function(){
  $("#wiki").toggle("400");
});
</script>